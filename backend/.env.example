# Database Configuration
MYSQL_USER=blood_admin
MYSQL_PASSWORD=YourStrongPassword123!
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=blood_availability_db

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Google Maps API
# Get your API key from: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Geocoding API, Distance Matrix API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase Configuration (Optional - for real-time notifications)
# Download your Firebase service account JSON and set the path
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json

# Server Configuration
PORT=5000
HOST=0.0.0.0

# AI/ML Configuration
MAX_MATCH_DISTANCE_KM=50
MIN_MATCH_SCORE=0.5

# Logging
LOG_LEVEL=INFO
